<%- include('layout/header.ejs') %>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Edit Coupon</h2>
        </div>
        <div>
            <input type="text" placeholder="Search Coupons" class="form-control bg-white">
        </div>
    </div>
    <div class="card">
        <p class="alert alert-success" id="success_mess" style="display: none;"></p>
        <% if(locals.message) { %>
            <div class="error1 alert alert-danger w-75"><%= locals.message %></div>
        <% } %>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    
                    <form id="editcouponform">
                        <% if(locals.coupondata) { %>
                        <input type="hidden" id="couponid" value="<%= locals.coupondata._id %>">
                        <div class="mb-4">
                            <label for="couponname" class="form-label">Name</label>
                            <input type="text" placeholder="Type here" value="<%= locals.coupondata.couponname %>" class="form-control" id="couponname" name="couponname">
                            <p class="perror mb-2" id="error1" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" class="form-control" id="status" name="status">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="coupondescription" class="form-label">Description</label>
                            <input type="text" placeholder="Type here" value = "<%= locals.coupondata.description %>" class="form-control" id="coupondescription" name="coupondescription">
                            <p class="perror mb-2" id="error2" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="couponcode" class="form-label">Code</label>
                            <input type="text" placeholder="Type here" class="form-control" value="<%= locals.coupondata.couponcode %>" id="couponcode" name="couponcode">
                            <p class="perror mb-2" id="error3" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="limit" class="form-label">Limit</label>
                            <input type="text" placeholder="Type here" class="form-control" value="<%= locals.coupondata.couponlimit %>" id="limit" name="limit">
                            <p class="perror mb-2" id="error4" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="reduction" class="form-label">Reduction Rate</label>
                            <input type="text" placeholder="Type here" class="form-control" value="<%= locals.coupondata.reductionrate %>" id="reduction" name="reduction">
                            <p class="perror mb-2" id="error5" style="display: none; color: red;"></p>
                        </div>
                        <% } %>
                        <div class="d-grid">
                            <button class="btn btn-primary">Edit Coupon</button>
                        </div>
                    </form>
                </div>
                
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section> <!-- content-main end// -->


<script src="/public/js/editcoupon.js"></script>

<%- include('layout/footer.ejs') %>