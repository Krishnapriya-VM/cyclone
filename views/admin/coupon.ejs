<%- include('layout/header.ejs') %>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Coupons </h2>
        </div>
        <div>
            <input type="text" placeholder="Search Categories" class="form-control bg-white">
        </div>
    </div>
    <div class="card">
        <p class="alert alert-success" id="success_mess" style="display: none;"></p>
        <% if(locals.message) { %>
            <div class="error1 alert alert-danger w-75"><%= locals.message %></div>
        <% } %>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <form method="post" id="couponform" action="/admin/coupon" >
                        <div class="mb-4">
                            <label for="couponname" class="form-label">Name</label>
                            <input type="text" placeholder="Type here" class="form-control" id="couponname" name="couponname">
                            <p class="perror mb-2" id="error1" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" class="form-control" id="status" name="status">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="coupondescription" class="form-label">Description</label>
                            <input type="text" placeholder="Type here" class="form-control" id="coupondescription" name="coupondescription">
                            <p class="perror mb-2" id="error2" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="couponcode" class="form-label">Code</label>
                            <input type="text" placeholder="Type here" class="form-control" id="couponcode" name="couponcode">
                            <p class="perror mb-2" id="error3" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="limit" class="form-label">Limit</label>
                            <input type="text" placeholder="Type here" class="form-control" id="limit" name="limit">
                            <p class="perror mb-2" id="error4" style="display: none; color: red;"></p>
                        </div>
                        <div class="mb-4">
                            <label for="reduction" class="form-label">Reduction Rate</label>
                            <input type="text" placeholder="Type here" class="form-control" id="reduction" name="reduction">
                            <p class="perror mb-2" id="error5" style="display: none; color: red;"></p>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary">Create Coupon</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-9">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <!-- <th class="text-center">Action</th> -->
                                    <th>Action</th>

                                </tr>
                            </thead> 
                            <thead>
                                <% if(locals.coupondata && locals.coupondata.length > 0) {for (var i = 0; i < locals.coupondata.length; i++) { %>
                                <tr>
                                    <th></th>
                                    <th><%= locals.coupondata[i].couponname  %></th>
                                    <th><%= locals.coupondata[i].couponcode  %></th>
                                    <!-- <td class="text-center"> -->
                                    <td>

                                        <a  href="/admin/edit-coupon?id=<%= locals.coupondata[i]._id  %>"><button class="btn btn-sm btn-brand rounded font-sm">Edit</button></a>
                                        
                                          
                                    </td>
                                </tr>
                                <% } }else{ %>
                                    <h2>No coupons found!!</h2>
                                    <% } %>
                            </thead>
                        </table>
                    </div>
                </div> <!-- .col// -->
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section> <!-- content-main end// -->


<script src="/public/js/admincoupon.js"></script>

<%- include('layout/footer.ejs') %>