    <div class="container reset-password-container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="feature-box border-top-primary">
                    <div class="feature-box-content">
                        <form class="mb-0" id="forgotForm" >
                            <br>
                            <br>
                            
                                <div style='color:rgb(68, 233, 74)' id="success_mess"></div>
                            
                            <p>
                                Lost your password? Please enter your
                                username or email address. You will receive
                                an OTP to create a new password via email.
                            </p>
                            <div class="form-group mb-0">
                                <label for="email" class="font-weight-normal">Username or email</label>
                                <input type="email" class="form-control" id="email" name="email"/>

                                    <p class="error mb-2" id="error1" style="display: none; color: #de1212;"></p>
                                    <% if(locals.error){ %>
                                    <p class="error mb-2 "><%= locals.error %></p>
                                    <% } %>
                            </div>
    
                            <div class="form-footer mb-0">
                                <a href="/user-login">Click here to login</a>
    
                                <button type="submit"
                                    class="btn btn-md btn-primary form-footer-right font-weight-normal text-transform-none mr-0">
                                    SUBMIT
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script src="../../public/js/forgotPasswordEmail.js"></script>
<%- include("layout/footer.ejs") %>