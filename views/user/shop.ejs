<style>
    
    .product-action {
        position: relative;
        text-align: center;
    }

    .add-wish-btn, .cart-detail-btn {
        
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0;
        color: #808080;
        background-color: #e0e0e073; 
        padding: 8px;
        border-radius: 1px;
        transition: all 0.3s ease;
    }

    .add-wish-btn {
        left: 0;
    }

    .cart-detail-btn {
        right: 0;
    }

    .btn-add-cart {
        background-color: #f5f5f5;
        border: none;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .product-action:hover .add-wish-btn, 
    .product-action:hover .cart-detail-btn {
        color: #808080; 
        opacity: 1;
    }

    .product-action:hover .add-wish-btn {
        left: -30px;
    }

    .product-action:hover .cart-detail-btn {
        right: -30px;
    }

    .btn-add-cart[disabled] {
    cursor: not-allowed; /* Disabled cursor */
    }

</style>
